{
  "compilerOptions": {
    "outDir": "./dist",

    "target": "esnext",
    "lib": ["esnext", "DOM", "ES6"],
    "types": ["node"],

    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,

    "diagnostics": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["main.ts"]
}
